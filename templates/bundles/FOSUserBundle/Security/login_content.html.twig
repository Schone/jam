{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="formgroup">
        <label for="username"><h4>{{ 'security.login.username'|trans }}</h4></label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>
    <div class="formgroup">
        <label for="password"><h4>{{ 'security.login.password'|trans }}</h4></label>
        <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>

    <input type="submit" class="btn btn-success" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
